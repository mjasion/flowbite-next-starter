{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:recommended"
  ],
  "schedule": [
    "on Friday",
    "on Tuesday"
  ],
  "configMigration": true,
  "rebaseWhen": "conflicted",
  "prConcurrentLimit": 5,
  "minimumReleaseAge": "3 days",
  "packageRules": [
    {
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint"
    },
    {
      "matchPackagePatterns": ["prettier"],
      "groupName": "prettier"
    },
    {
      "matchPackagePatterns": ["tailwindcss"],
      "groupName": "tailwindcss"
    },
    {
      "matchPackagePatterns": ["flowbite"],
      "groupName": "flowbite"
    },
    {
      "matchPackagePatterns": ["next"],
      "groupName": "next"
    },
    {
      "groupName": "Font Awesome",
      "matchPackageNames": [
        "@fortawesome/**"
      ]
    },
    {
      "extends": [
        "monorepo:eslint"
      ],
      "groupName": "eslint monorepo",
      "matchUpdateTypes": [
        "digest",
        "patch",
        "minor",
        "major"
      ]
    }
  ]
}
